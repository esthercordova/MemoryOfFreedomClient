<h1>Memory of Freedom</h1>

<h4>{{title}}</h4>
<div id="showAnswerButton">
<button id="showAnswer" class="btn btn-info showAnswerButton">Show me the answer!</button>
</div>

<div id="answer">
  {{#each answer}}
  <ul>
    <li>{{this}}</li>
  </ul>
  {{/each}}

  <button id="right" class="btn btn-info answerButton">Got it right!</button>
  <button id="wrong" class="btn btn-info answerButton">Got it wrong</button>
  <button id="stop" class="btn btn-info">Stop studying</button>

</div>

